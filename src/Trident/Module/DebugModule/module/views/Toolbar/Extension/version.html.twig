{% extends 'TridentDebugModule:Toolbar:toolbar-item.html.twig' %}

{% block label %}
    <img alt="" width="24" height="24" src="data:image/png;base64," />
    <span>&nbsp;&nbsp;v{{ app.version }}</span>
{% endblock %}

{% block panel %}
    <div class="trt-panel-item">
        <strong>Trident</strong>
        <span>v{{ app.version }}</span>
    </div>
    <div class="trt-panel-item">
        <strong>Environment</strong>
        <span class="trt-label">{{ app.environment }}</span>
    </div>
    <div class="trt-panel-item">
        <strong>Is debug mode?</strong>
        <span>{{ app.debug ? 'Yes' : 'No' }}</span>
    </div>
    <div class="trt-panel-item">
        <strong>Is safe mode?</strong>
        <span>{{ app.safeMode ? 'Yes' : 'No' }}</span>
    </div>
{% endblock %}
